---
interface Props {
	image: string;
	title: string;
	description: string;
	alt?: string;
}

const { image, title, description, alt = title } = Astro.props;
---

<div class="rounded-xl overflow-hidden shadow-md bg-white transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
	<img src={image} alt={alt} class="w-full aspect-[3/1] md:aspect-video object-cover transition-transform duration-300 hover:scale-105" />
	<div class="p-4">
		<h3 class="text-lg font-bold text-primary">{title}</h3>
		<p class="text-gray-dark text-sm">{description}</p>
	</div>
</div>
