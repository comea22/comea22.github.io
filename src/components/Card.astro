---
interface Props {
	image: string;
	title: string;
	description: string;
	alt?: string;
}

const { image, title, description, alt = title } = Astro.props;
---

<div class="rounded-xl overflow-hidden shadow-md bg-white h-44 md:h-50">
	<img src={image} alt={alt} class="w-full h-26 md:h-32 object-cover rounded-t-xl rounded-b-none" />
	<div class="p-4">
		<h3 class="text-lg font-bold text-primary">{title}</h3>
		<p class="text-gray-dark text-sm">{description}</p>
	</div>
</div>
