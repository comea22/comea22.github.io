---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white shadow-[0_2px_8px_rgba(15,18,25,0.05)]">
	<nav class="flex items-center justify-between px-6 md:max-w-3xl md:mx-auto">
		<a href="/" class="no-underline">
			<img src="/logo.webp" alt={SITE_TITLE} class="w-44 md:w-56" />
		</a>

		<!-- 漢堡按鈕（手機版） -->
		<button id="menu-toggle" class="md:hidden p-2 text-primary" aria-label="開啟選單">
			<div id="hamburger" class="group w-8 h-6 relative flex flex-col justify-between overflow-visible">
				<span class="block h-0.5 w-full bg-primary rounded transition-all duration-300 origin-center group-[.open]:translate-y-[11px] group-[.open]:rotate-45"></span>
				<span class="block h-0.5 w-full bg-primary rounded transition-all duration-300 origin-center group-[.open]:opacity-0"></span>
				<span class="block h-0.5 w-full bg-primary rounded transition-all duration-300 origin-center group-[.open]:-translate-y-[11px] group-[.open]:-rotate-45"></span>
			</div>
		</button>

		<!-- 桌面版導覽 -->
		<div class="hidden md:flex gap-4">
			<HeaderLink href="/">首頁</HeaderLink>
			<HeaderLink href="/notes">學習筆記</HeaderLink>
			<HeaderLink href="/about">關於我</HeaderLink>
		</div>
	</nav>

	<!-- 手機版選單 -->
	<div id="mobile-menu" class="hidden md:hidden pb-4">
		<div class="flex flex-col items-center gap-2">
			<HeaderLink href="/">首頁</HeaderLink>
			<HeaderLink href="/notes">學習筆記</HeaderLink>
			<HeaderLink href="/about">關於我</HeaderLink>
		</div>
	</div>
</header>

<script>
	const menuToggle = document.getElementById('menu-toggle');
	const mobileMenu = document.getElementById('mobile-menu');
	const hamburger = document.getElementById('hamburger');

	menuToggle?.addEventListener('click', () => {
		const isOpen = !mobileMenu?.classList.contains('hidden');

		if (isOpen) {
			mobileMenu?.classList.add('hidden');
			hamburger?.classList.remove('open');
		} else {
			mobileMenu?.classList.remove('hidden');
			hamburger?.classList.add('open');
		}
	});
</script>
