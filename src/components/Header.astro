---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="fixed top-0 left-0 right-0 z-50 px-6 md:px-4 bg-white shadow-[0_2px_8px_rgba(15,18,25,0.05)]">
	<nav class="flex items-center justify-between md:justify-center md:gap-36">
		<a href="/" class="no-underline">
			<img src="/logo.webp" alt={SITE_TITLE} class="w-44" />
		</a>

		<!-- 漢堡按鈕（手機版） -->
		<button id="menu-toggle" class="md:hidden p-2 text-primary" aria-label="開啟選單">
			<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
			</svg>
		</button>

		<!-- 桌面版導覽 -->
		<div class="hidden md:flex gap-4">
			<HeaderLink href="/">首頁</HeaderLink>
			<HeaderLink href="/notes">學習筆記</HeaderLink>
			<HeaderLink href="/about">關於我</HeaderLink>
		</div>
	</nav>

	<!-- 手機版選單 -->
	<div id="mobile-menu" class="hidden md:hidden pb-4">
		<div class="flex flex-col items-center gap-2">
			<HeaderLink href="/">首頁</HeaderLink>
			<HeaderLink href="/notes">學習筆記</HeaderLink>
			<HeaderLink href="/about">關於我</HeaderLink>
		</div>
	</div>
</header>

<script>
	const menuToggle = document.getElementById('menu-toggle');
	const mobileMenu = document.getElementById('mobile-menu');
	const menuIcon = document.getElementById('menu-icon');

	menuToggle?.addEventListener('click', () => {
		const isOpen = !mobileMenu?.classList.contains('hidden');

		if (isOpen) {
			mobileMenu?.classList.add('hidden');
			menuIcon?.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
		} else {
			mobileMenu?.classList.remove('hidden');
			menuIcon?.setAttribute('d', 'M6 18L18 6M6 6l12 12');
		}
	});
</script>
